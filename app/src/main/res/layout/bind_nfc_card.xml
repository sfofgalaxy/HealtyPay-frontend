<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d7d7d7">
    <com.example.myapplication.ui.CustomTitleBar
        android:id="@+id/bind_nfc_card"
        android:background="#50c03a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:left_icon="@drawable/arrow_left"
        app:bar_title="添加公交卡"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatarView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/nfc_card" />

        <Button
            android:layout_width="367dp"
            android:layout_height="104dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/button_shape_green"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="@string/swipe_card_hint"
            android:textColor="@color/titleTextColor"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center|center_horizontal|center_vertical" >
            <Button
                android:id="@+id/bind_nfc_button"
                android:layout_width="147dp"
                android:layout_height="41dp"
                android:background="@drawable/button_shape_green"
                android:text="绑定"
                android:textColor="@color/titleTextColor"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>